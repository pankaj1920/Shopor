<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppBase" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomProgressBarTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="CommonStyle">
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="Text.Basic" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Text.PoppinMedium" parent="Text.Basic">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="Text.PoppinSemiBold" parent="Text.Basic">
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="Text.PoppinBold" parent="Text.Basic">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="Text.Placeholder" parent="Text.Basic">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="BasicEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_line</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:paddingStart">@dimen/_2sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_3sdp</item>
        <item name="android:paddingBottom">@dimen/_3sdp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textCursorDrawable">@drawable/ic_cursor</item>
    </style>

    <style name="MobileEditText" parent="BasicEditText">
        <item name="android:inputType">number</item>
        <item name="android:maxLength">10</item>
        <item name="android:digits">@string/digits</item>
    </style>

    <style name="PincodeEditText" parent="BasicEditText">
        <item name="android:inputType">number</item>
        <item name="android:maxLength">6</item>
        <item name="android:digits">@string/digits</item>
    </style>

    <style name="PanCardEditText" parent="BasicEditText">
        <item name="android:maxLength">10</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AadhaarEditText" parent="BasicEditText">
        <item name="android:inputType">number</item>
        <item name="android:maxLength">12</item>
        <item name="android:digits">@string/digits</item>
    </style>

    <style name="EmailEditText" parent="BasicEditText">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="PasswordEditText" parent="BasicEditText">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="NoBorderEditText" parent="BasicEditText">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BaseTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="errorEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="boxStrokeColor">@color/border_grey</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_5sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_5sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_5sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_5sdp</item>
    </style>

    <style name="BaseTextInputEditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:importantForAutofill" tools:targetApi="o">no</item>
        <item name="android:textColorHint">@color/text_grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
    </style>

    <style name="BaseButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_btn</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BaseCardView" parent="CardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">@dimen/_5sdp</item>
        <item name="cardElevation">@dimen/_4sdp</item>
    </style>

    <style name="ShapeableImageView" parent="">
        <item name="cornerSize">5%</item>
    </style>


    <style name="ActionText" parent="Text.Basic">
        <item name="android:textColor">@color/actionTextColor</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>


    <style name="IconImageView" parent="android:Widget">
        <item name="android:layout_width">@dimen/_32sdp</item>
        <item name="android:layout_height">@dimen/_32sdp</item>
        <item name="android:padding">@dimen/_3sdp</item>
        <item name="android:tint">@color/hintColor</item>
    </style>


    <style name="TransparentStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.TransparentNavigation" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="StatusBarColor" parent="Theme.AppBase">
        <item name="android:statusBarColor">#F5F5F5</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>


</resources>